<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: 'Organisation Set', vennDiagram: true }) %>
  <body>
    <%- include('partials/header') %>
    <div class="combined-container">
      
      <!-- Venn Diagram Container -->
      <div class="venn-container">
        <div class="venn-diagram">
          <div class="circle circle1"></div>
          <div class="circle circle2"></div>
          <div class="circle circle3"></div>
          <input type="text" id="market" class="label label1" name="market" placeholder="<%= businessData.market || 'Market' %>" readonly>
          <input type="text" id="organization" class="label label2" name="organization" placeholder="<%= businessData.organization || 'Organization' %>" readonly>
          <input type="text" id="businessEnvironment" class="label label3" name="businessEnvironment" placeholder="<%= businessData.businessEnvironment || 'Business Environment' %>" readonly>
          <input type="text" id="productsServices" class="label label4" name="productsServices" placeholder="<%= businessData.productsServices || 'Products/Services' %>" readonly>
          <input type="text" id="coreBusiness" class="label label5" name="coreBusiness" placeholder="<%= businessData.coreBusiness || 'Core Business' %>" readonly>
          <input type="text" id="competition" class="label label6" name="competition" placeholder="<%= businessData.competition || 'Competition' %>" readonly>
          <input type="text" id="resources" class="label label7" name="resources" placeholder="<%= businessData.resources || 'Resources' %>" readonly>
          <input type="text" id="businessClimate" class="label label8" name="businessClimate" placeholder="<%= businessData.businessClimate || 'Business Climate' %>" readonly>
        </div>
      </div>

      <!-- Organisation Set Form Container -->
      <div class="form-container">
        <header>Generic Business Model</header>

        <!-- Error Message Display -->
        <% if (error) { %>
        <div class="error-container">
          <ul class="error-list">
            <% for (const key in error) { %>
              <li><%= error[key] %></li>
            <% } %>
          </ul>
        </div>
        <% } %>

        <form action="/submit-organisation-set" method="post">
          <div class="form-group">
            <span class="title">Organisation Set</span>
            <div class="fields">
              <div class="form-group">
                <label for="mission">Mission</label>
                <input
                  type="text"
                  name="mission"
                  id="mission"
                  placeholder="Mission of the organisation"
                  value="<%= businessData.mission || '' %>"
                  required
                />
              </div>
              <div class="form-group">
                <label for="internalStructure">Internal Structure</label>
                <input
                  type="text"
                  name="internalStructure"
                  id="internalStructure"
                  placeholder="Organisation structure hierarchy"
                  value="<%= businessData.internalStructure || '' %>"
                  required
                />
              </div>
              <div class="form-group">
                <label for="geographicalStructure">Geographical Structure</label>
                <input
                  type="text"
                  name="geographicalStructure"
                  id="geographicalStructure"
                  placeholder="Where the organisation is located"
                  value="<%= businessData.geographicalStructure || '' %>"
                  required
                />
              </div>
              <div class="form-group">
                <label for="processes">Processes</label>
                <input
                  type="text"
                  name="processes"
                  id="processes"
                  placeholder="List main processes to convert resources"
                  value="<%= businessData.processes || '' %>"
                  required
                />
              </div>
              <div class="form-group">
                <label for="organisationalCulture">Organisational Culture</label>
                <input
                  type="text"
                  name="organisationalCulture"
                  id="organisationalCulture"
                  placeholder="What is it like to work in the organisation"
                  value="<%= businessData.organisationalCulture || '' %>"
                  required
                />
              </div>
              <div class="form-group">
                <label for="history">History</label>
                <input
                  type="text"
                  name="history"
                  id="history"
                  placeholder="How was the organisation formed"
                  value="<%= businessData.history || '' %>"
                  required
                />
              </div>
            </div>
          </div>

          <div class="buttons">
            <button type="submit" class="nextBtn">
              <span class="btnText">Next</span>
              <i class="uil uil-navigator"></i>
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="/script.js"></script>
  </body>
</html>
